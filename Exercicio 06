Alterar o programa do exercício anterior de modo que ele possa ser usado em veículos com padrão de consumo diferente de 12 Km por litro.

Function Main ()
 
    local nTemp := 0
    local nVelo := 0
    local nDisPe := 0
    local nQC := 0
    local nPad := 0
 
    ? "Exercicio 5"
    ? " "
 
    ACCEPT "Digite o tempo gasto na viagem em minutos: " TO nTemp
    ACCEPT "Digite a velocidade media na viagem: " TO nVelo
    ACCEPT "Digite o padrao de consumo de seu veiculo: " TO nPad
 
    nDisPe := (Val(nTemp) * Val(nVelo))
    nQC := (nDisPe / Val(nPad))
 
     QOUT (" ")
     QOUT ("A velocidade media foi de: ", nVelo, "km/h")
     QOUT ("O tempo gasto na viagem foi de: " , nTemp , "min")
     QOUT ("A distancia percorrida foi de: " , nDisPe ,"km")
     QOUT ("A quantidade de litros de combustivel utilizado foi de: ", nQC , "l")
     QOUT (" ")
 
RETURN nil
